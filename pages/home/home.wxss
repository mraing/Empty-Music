/* pages/home/home.wxss */

.music-cover{
  margin: auto;
  margin-top: 50px;
  text-align: center;
  width: 150px;
  height: 150px;
  box-shadow: 0 0 10px 1px #eee;
}

.music-cover-img{
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.music-info{
  text-align: center;
  padding: 10px 0;
}

.music-title{
  font-size: 16px;
  color: #222;
  line-height: 25px;
}

.music-author{
  font-size: 12px;
  color: #999;
}

.audio-main{
  height: 0;
}

.play-option{
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  /* background: yellowgreen; */
}

.play-option>button{
  padding: 0;
  margin: 0 10px;
  width: 50px;
  height: 50px;
  background: #fff;
  border-radius: 50%;
  overflow: hidden;
}